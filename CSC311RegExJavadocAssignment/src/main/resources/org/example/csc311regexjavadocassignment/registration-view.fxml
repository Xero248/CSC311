<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="org.example.csc311regexjavadocassignment.RegistrationFormController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">

  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
  <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
  <Label fx:id="firstNameError" textFill="RED" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

  <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
  <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
  <Label fx:id="lastNameError" textFill="RED" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

  <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
  <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
  <Label fx:id="emailError" textFill="RED" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

  <Label text="Date of Birth (MM/DD/YYYY):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
  <TextField fx:id="dobField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
  <Label fx:id="dobError" textFill="RED" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

  <Label text="Zip Code:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
  <TextField fx:id="zipField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
  <Label fx:id="zipError" textFill="RED" GridPane.rowIndex="4" GridPane.columnIndex="2"/>

  <Button fx:id="addButton" text="Add" onAction="#handleAdd" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>
